<% include layouts/header.ejs %>

<div class="grid">
	<% articles.forEach(function (article) { %>
		<div class="unit w-1-3">
			<div class="item">
				<div class="thumbnail">
					<a href="/article/<%= article.id %>">
						<img src="<%= article.thumbnail %>" alt="">
					</a>
				</div>
				<div class="item-title">
					<a href="/article/<%= article.id %>">
						<h2><%= article.title %></h2>
					</a>
				</div>
				<div class="item-tags">

				</div>
				<div class="item-date">
					<%= article.createdShort || '' %>
				</div>
				<div class="clear"></div>
				<div>
					<%= article.views %>
				</div>
				
				<div class="clear"></div>
			</div>
		</div>
	<% }) %>
</div>

<% include layouts/footer.ejs %>